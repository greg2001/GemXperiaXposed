<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiCirclePageIndicatorStyle">@style/LightCirclePageIndicator</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseThemeDark" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppThemeDark" parent="AppBaseThemeDark">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiCirclePageIndicatorStyle">@style/DarkCirclePageIndicator</item>
    </style>
    
    <!-- ================== -->
    
    <style name="LightCirclePageIndicator">
        <item name="fillColor">@android:color/holo_blue_dark</item>
        <item name="strokeColor">@android:color/holo_blue_dark</item>
    </style>
        
    <style name="DarkCirclePageIndicator">
        <item name="fillColor">@android:color/holo_blue_dark</item>
        <item name="strokeColor">@android:color/holo_blue_dark</item>
    </style>    
    
</resources>
